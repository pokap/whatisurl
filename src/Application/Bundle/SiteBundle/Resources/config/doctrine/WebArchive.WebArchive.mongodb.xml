<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Application\Bundle\SiteBundle\Document\WebArchive\WebArchive">

        <field fieldName="url"          type="string" />
        <field fieldName="updatedAt"    type="date"     name="updated_at" />

        <embed-many field="snapshots" target-document="Application\Bundle\SiteBundle\Document\WebArchive\Snapshot" />

    </embedded-document>

</doctrine-mongo-mapping>
